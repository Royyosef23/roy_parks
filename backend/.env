# Environment Variables לBackend
# העתק קובץ זה ל-.env ומלא את הערכים

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/parkbnb_dev"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# Email (Development - MailHog)
SMTP_HOST="127.0.0.1"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@parkbnb.com"

# Email (Production - Gmail)
EMAIL_USER="your-gmail@gmail.com"
EMAIL_PASSWORD="your-app-password"

# File Upload (Cloudinary)
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# Payment (Stripe)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# Google Maps (Optional)
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
